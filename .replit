# Install dependencies whenever the repl boots
onBoot = "npm install"

# Run the build step before serving
compile = "npm run build"

# Start the built Next.js server
run = "npm run start"
modules = ["nodejs-24"]

# Expose Next.jsâ€™s default port (3000) to the web
[[ports]]
localPort = 3000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
